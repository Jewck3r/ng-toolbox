{
  "name": "pe-ng-toolbox",
  "version": "0.1.4",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "start": "npm run prod:prepare && npm run prod",
    "prod": "npm run prod:build && npm run prod:bundle",
    "prod:prepare": "npm run lint && npm run test && npm run clean",
    "prod:build": "ng build -op dist -ec false -vc false -oh false --prod --aot",
    "prod:bundle": "uglifyjs dist/inline.bundle.js dist/styles.bundle.js dist/main.bundle.js -c -m --screw-ie8 -o dist/game.min.js",
    "clean": "rm -rf dist",
    "lint": "tslint \"/**/*.ts\"",
    "test": "ng test",
    "dev:build": "ng build --op dist --dev",
    "serve": "ng serve --host 0.0.0.0 --port 9999 --dev -op dist",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor"
  },
  "dependencies": {
    "@angular/animations": "^4.2.5",
    "@angular/common": "^4.2.5",
    "@angular/compiler": "^4.2.5",
    "@angular/core": "^4.2.5",
    "@angular/http": "^4.2.5",
    "@angular/router": "^4.2.5",
    "@angular/platform-browser": "^4.2.5",
    "@angular/platform-browser-dynamic": "^4.2.5",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.10",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.8.12"
  },
  "devDependencies": {
    "@angular/cli": "1.2.0",
    "@angular/compiler-cli": "^4.2.5",
    "@types/jasmine": "2.5.38",
    "@types/node": "^6.0.42",
    "codelyzer": "~2.0.0-beta.1",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.5.0",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "protractor": "~4.0.13",
    "sass-resolution": "^1.0.0",
    "scss": "^0.2.4",
    "ts-node": "1.2.1",
    "tslint": "^4.0.2",
    "typescript": "~2.4.0"
  }
}
